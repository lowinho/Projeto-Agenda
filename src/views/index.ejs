<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>

      <%- include('includes/messages') %>

      <% if(contatos.length > 0) { %> <!--Passos(23) - se tiver algum contato ele mostra-->
      <div class="responsive-table">
        <table class="table my-3">
          <% contatos.forEach(contato => { %> <!--Passos(20) - fazemos um forEach para contato-->
          <tr>
            <td><%= contato.nome %></td> <!-- exibir o contato.nome-->
            <td><%= contato.sobrenome %></td>
            <td><%= contato.telefone %></td>
            <td><%= contato.email %></td>
            <td><a href="/contato/index/<%= contato._id %>">Editar</a></td> <!-- editando contatos-->
            <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td> <!-- deletando contatos-->
          </tr>
          <% }); %>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">Não existem contatos na sua agenda.</p> <!-- se não mostra essa mensagem-->
      <% } %>

    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
